{
	"name": "summit-kit",
	"version": "2.0.11",
	"type": "module",
	"exports": {
		"./react": {
			"types": "./dist/react/index.d.ts",
			"import": "./dist/react-server.js"
		},
		"./react/client": {
			"types": "./dist/react/client.d.ts",
			"import": "./dist/react-client.js"
		},
		"./react/styles": "./dist/summit-kit.css"
	},
	"files": [
		"dist",
		"!**/*.tsbuildinfo"
	],
	"peerDependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "npm run check && npm run build"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"npx @biomejs/biome check --write",
			"npx @biomejs/biome format --write"
		],
		"src/**/*.{css,md}": [
			"npx @biomejs/biome format --write"
		]
	},
	"scripts": {
		"docs:react": "typedoc src/react/**/*.{ts,tsx,css} --plugin typedoc-plugin-markdown --theme markdown --out docs",
		"clean": "rimraf dist temp-docs",
		"build": "tsc --noEmit && vite build && npm run docs:react",
		"check": "npx @biomejs/biome check --write ./src"
	},
	"dependencies": {
		"howler": "^2.2.4",
		"prism-react-renderer": "^2.4.1",
		"react-icons": "^5.5.0",
		"screenfull": "^6.0.2",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/howler": "^2.2.12",
		"@types/node": "^22.15.23",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"@vitejs/plugin-react-swc": "^3.10.0",
		"concat-md": "^0.5.1",
		"lint-staged": "^16.1.0",
		"rimraf": "^6.0.1",
		"showdown": "^2.1.0",
		"simple-git-hooks": "^2.13.0",
		"typedoc": "^0.28.5",
		"typedoc-plugin-markdown": "^4.6.3",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.4"
	},
	"keywords": [
		"react",
		"kit",
		"components",
		"ui",
		"library",
		"summit"
	],
	"homepage": "https://github.com/andrewgremlich/summit-kit/blob/main/docs/modules.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrewgremlich/summit-kit"
	}
}
